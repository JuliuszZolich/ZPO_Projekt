<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projekt_zpo.Controllers.AddGroupController">
   <children>
      <Label layoutX="99.0" layoutY="14.0" text="Dodaj Grupe">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="75.0" layoutY="72.0" text="Nazwa Grupy:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="groupNameTextArea" layoutX="66.0" layoutY="107.0" prefHeight="26.0" prefWidth="270.0" promptText="Nazwa Grupy" />
      <Button fx:id="cancelAddGroupButton" layoutX="90.0" layoutY="180.0" mnemonicParsing="false" onMouseClicked="#close" prefHeight="20.0" prefWidth="80.0" text="Anuluj" />
      <Button fx:id="addGroupButton" layoutX="220.0" layoutY="180.0" mnemonicParsing="false" onMouseClicked="#add" prefHeight="20.0" prefWidth="80.0" text="Dodaj" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="68.0" layoutY="146.0" prefHeight="17.0" prefWidth="270.0" textFill="RED" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
